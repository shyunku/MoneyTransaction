<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/standard_rounded_item">

    <TextView
        android:id="@+id/detail_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rixgo"
        android:text="-"
        android:textColor="@color/DarkTheme10"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/rixgo"
        android:text="- 에게 갚음"
        android:textColor="@color/DarkTheme10"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_reason" />

    <TextView
        android:id="@+id/detail_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/rixgo"
        android:text="2019.04.23 오후 3:45"
        android:textAlignment="viewEnd"
        android:textColor="@color/DarkTheme10"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_reason"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/rixgo"
        android:text="- 원"
        android:textAlignment="viewEnd"
        android:textColor="@color/DarkTheme10"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_type"
        app:layout_constraintTop_toBottomOf="@+id/detail_time" />

</androidx.constraintlayout.widget.ConstraintLayout>